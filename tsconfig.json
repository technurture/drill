{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    /* FRONTEND (Vite/React) */
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./client/src/*"
      ]
    },
    "types": [
      "vite/client"
    ],
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    /* BACKEND COMPILATION */
    "allowJs": false,
    "noEmit": false, // IMPORTANT: Compile backend!
    "outDir": "dist", // Output JS goes here
    "isolatedModules": false,
    /* QUALITY */
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "client/src/**/*",
    "client/src/vite-env.d.ts",
    "server/**/*.ts" // Backend ONLY
  ],
  "exclude": [
    "node_modules",
    "client/dist",
    "dist"
  ]
}