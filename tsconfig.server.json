{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "outDir": "dist/server",
        "skipLibCheck": true,
        "isolatedModules": true,
        "noEmit": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}